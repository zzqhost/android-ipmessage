<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical">

		<TextView android:id="@+id/login_username_view"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:text="@string/ipmsg_username" android:gravity="left"
			android:textAppearance="?android:attr/textAppearanceMedium" />

		<EditText android:id="@+id/ipmsg_username_edit"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:scrollHorizontally="true" android:autoText="false"
			android:capitalize="none" android:gravity="fill_horizontal"
			android:textAppearance="?android:attr/textAppearanceMedium"
		 />

		<TextView android:id="@+id/ipmsg_group"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:text="@string/ipmsg_group" android:gravity="left"
			android:textAppearance="?android:attr/textAppearanceMedium" />


		<EditText android:id="@+id/ipmsg_group_edit"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:scrollHorizontally="true" android:autoText="false"
			android:capitalize="none" android:gravity="fill_horizontal"
		     android:textAppearance="?android:attr/textAppearanceMedium"
			/>
			
		<TextView android:id="@+id/ipmsg_host"
			android:layout_height="wrap_content" android:layout_width="wrap_content"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:text="@string/ipmsg_host" android:gravity="left"
			android:textAppearance="?android:attr/textAppearanceMedium" />


		<EditText android:id="@+id/ipmsg_host_edit"
			android:layout_height="wrap_content" android:layout_width="fill_parent"
			android:layout_marginLeft="20dip" android:layout_marginRight="20dip"
			android:scrollHorizontally="true" android:autoText="false"
			android:capitalize="none" android:gravity="fill_horizontal"
		     android:textAppearance="?android:attr/textAppearanceMedium"
			/>




	</LinearLayout>
</ScrollView>
